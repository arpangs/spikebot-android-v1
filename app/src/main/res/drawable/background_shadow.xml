<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->

    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">

        <shape android:shape="rectangle">

            <solid android:color="@color/device_button" />

            <corners android:radius="10dp" /><!--15dp-->

        </shape>

    </item>

    <!-- White Top color -->

    <item
        android:bottom="4px"
        android:left="4px"
        android:right="4px"
        android:top="4px">

        <shape android:shape="rectangle">

            <solid android:color="@color/automation_white" />

            <corners android:radius="10dp" />

        </shape>

    </item>

</layer-list>


