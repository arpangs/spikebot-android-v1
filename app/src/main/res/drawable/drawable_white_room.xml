<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->

    <item
        android:bottom="0px"
        android:left="0px"
        android:right="0px"
        android:top="9px">

        <shape android:shape="rectangle">

            <solid android:color="#ccc" />

            <corners android:radius="10dp" /><!--15dp-->

        </shape>

    </item>

    <!-- White Top color -->

    <item
        android:bottom="8px"
        android:left="0px"
        android:right="0px"
        android:top="5px">

        <shape android:shape="rectangle">

            <solid android:color="@color/automation_white" />

            <corners android:radius="10dp" />

        </shape>

    </item>

</layer-list>

