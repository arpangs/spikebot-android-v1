<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarItemBackground">@color/solid_blue</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->

        <item name="colorPrimary">@color/solid_blue</item>
        <item name="colorPrimaryDark">@color/solid_blue</item>
        <item name="colorAccent">@color/solid_blue</item>
<!--
        <item name="android:colorControlActivated">@color/automation_yellow</item>
        <item name="android:colorControlHighlight">@color/automation_yellow</item>-->

    </style>

    <style name="Color1SwitchStyle" >
        <item name="colorControlActivated">@color/solid_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> <item name="android:fontFamily">Axiforma-Regular</item>

       <!-- <item name="android:typeface">serif</item>-->

    </style>

    <style name="AppTheme.NoActionBarWhite">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottomsheet_corner</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/solid_blue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="android:fontFamily">Avenir-Heavy</item>

    </style>

    <style name="AppTheme.AppBarOverlayWhite" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimaryDark">@color/automation_white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlayWhite" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimaryDark">@color/automation_white</item>
    </style>

    <style name="customTabLayout" parent="android:Widget.Material.TabWidget">
        <item name="tabIndicatorColor">@color/automation_white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:dividerPadding">3dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/automation_white</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/automation_white</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="android:Widget.Material.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTabLayoutTextAppearance2" parent="android:Widget.Material.TabWidget">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme_Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>


    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:divider">@color/automation_white</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@color/solid_blue</item>
    </style>

    <style name="PopupMenuHome" parent="Widget.AppCompat.PopupMenu">
        <item name="android:divider">@color/automation_black</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:itemBackground">@color/automation_white</item>
    </style>


    <style name="SwitchMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:divider">#ff8bc34a</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:textColor">#ff8bc34a</item>
        <item name="android:itemBackground">#ff8bc34a</item>
    </style>
    <item name="player_display" type="id" />
    <item name="player_display_box" type="id"/>
    <item name="player_display_float_box" type="id"/>

</resources>
