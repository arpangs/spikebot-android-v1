<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_top_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_3sdp"
    android:orientation="vertical">

   <!-- android:background="@drawable/background_shadow_mood"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_line_top"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_top_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggle_button_section"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_section_toggle"
                    android:contentDescription="Change state of section"
                    android:padding="@dimen/section_padding"
                    android:textOff=""
                    android:textOn="" />
                <TextView
                    android:id="@+id/text_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="@dimen/section_padding"
                    android:paddingBottom="@dimen/section_padding"
                    android:text="frontyard"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@color/sky_blue"
                    android:textSize="17sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:text="\u2022"/>

                <!--<TextView
                    android:id="@+id/txt_total_devices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:text="0 Devices"
                    android:textAllCaps="true"
                    android:textColor="@color/redminus"
                    android:textSize="@dimen/_12sdp" />-->

                <ImageView
                    android:id="@+id/iv_mood_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:adjustViewBounds="true"
                    android:gravity="center_horizontal"
                    android:src="@drawable/edit_blue" />

                <ImageView
                    android:id="@+id/iv_mood_delete"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:src="@drawable/delete_blue" />

                <TextView
                    android:id="@+id/text_section_edit"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_blue_circle_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Edit"
                    android:textColor="@color/sky_blue"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_section_on_off"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rounded_blue_circle_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="OFF"
                    android:textColor="@color/sky_blue"
                    android:textSize="15sp"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/panel_off" />
            </LinearLayout>


            <LinearLayout
                android:padding="2dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icn_schedule_v2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/blueclock" />

                    <TextView
                        android:id="@+id/txt_schedulelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="1dp"
                        android:text="Schedule"
                        android:textColor="@color/signupblack"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="13dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_icn_log"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_log" />

                    <TextView
                        android:id="@+id/txt_log_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:textSize="10sp"
                        android:textColor="@color/signupblack"
                        android:text="Logs"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/frameRemote"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgRemote"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/remote" />


                    <TextView
                        android:id="@+id/txtRemote"
                        android:layout_width="33dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="36.5dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:background="@drawable/drawable_remote"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="1dp"
                        android:paddingRight="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        tools:text="123"
                        android:textColor="@color/automation_white"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_remote_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:textSize="10sp"
                        android:textColor="@color/signupblack"
                        android:text="Smart remote"/>


                </FrameLayout>
                </LinearLayout>

             <!--   <TextView
                    android:id="@+id/txt_total_devices"
                    android:gravity="right|center"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/sky_blue"
                    android:text="0 Devices"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />-->


                <TextView
                    android:id="@+id/txt_total_devices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1.5"
                    android:gravity="right|center"
                    android:text="0 Device"
                    android:textAllCaps="true"
                    android:textColor="@color/redminus"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
