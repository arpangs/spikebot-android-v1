<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_top_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_3sdp"
    android:orientation="vertical">

    <!-- android:background="@drawable/background_shadow_mood"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_line_top"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_top_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggle_button_section"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/selector_section_toggle"
                    android:contentDescription="Change state of section"
                    android:padding="@dimen/section_padding"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/text_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:paddingTop="@dimen/section_padding"
                    android:paddingBottom="@dimen/section_padding"
                    android:singleLine="true"
                    android:text="frontyard"
                    android:textColor="@color/sky_blue"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="\u2022"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <!--<TextView
                    android:id="@+id/txt_total_devices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:text="0 Devices"
                    android:textAllCaps="true"
                    android:textColor="@color/redminus"
                    android:textSize="@dimen/_12sdp" />-->

                <ImageView
                    android:id="@+id/iv_mood_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    android:gravity="center_horizontal"
                    android:src="@drawable/edit_blue" />

                <ImageView
                    android:id="@+id/iv_mood_delete"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:gravity="center_horizontal"
                    android:src="@drawable/delete_blue"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_section_edit"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_blue_circle_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Edit"
                    android:textColor="@color/sky_blue"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_section_on_off"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rounded_blue_circle_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="OFF"
                    android:textColor="@color/sky_blue"
                    android:textSize="15sp"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/panel_off" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="2dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icn_schedule_v2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/blueclock" />

                    <TextView
                        android:id="@+id/txt_schedulelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="bottom"
                        android:text="Schedule"
                        android:textColor="@color/signupblack"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="13dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_icn_log"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_log" />

                    <TextView
                        android:id="@+id/txt_log_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom"
                        android:text="Logs"
                        android:textColor="@color/signupblack"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/frameRemote"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgRemote"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/remote" />


                        <TextView
                            android:id="@+id/txtRemote"
                            android:layout_width="33dp"
                            android:layout_height="21dp"
                            android:layout_toRightOf="@+id/imgRemote"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:background="@drawable/drawable_remote"
                            android:gravity="center"
                            android:layout_marginLeft="-10dp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="1dp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:textColor="@color/automation_white"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone"
                            tools:text="123" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_remote_label"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="45dp"
                            android:gravity="bottom"
                            android:text="Smart remote"
                            android:textColor="@color/signupblack"
                            android:textSize="10sp" />


                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/motion_detector"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/img_motion_detector"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/pir_detector_on" />

                        <TextView
                            android:id="@+id/txt_motion_count"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/badge_background_beacon"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            tools:text="99" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_motion_detector"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="bottom"
                        android:text="Motion\nDetector"
                        android:textColor="@color/signupblack"
                        android:textSize="10sp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/txt_total_devices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_weight="1.5"
                    android:gravity="right|center"
                    android:text="0 Devices"
                    android:textColor="@color/redminus"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
