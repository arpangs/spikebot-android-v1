<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="@color/automation_gray_2"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:elevation="0dp">
    <!--app:cardElevation="0dp"
    app:elevation="0dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_line_top"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_screen_for" />

        <LinearLayout
            android:id="@+id/ll_top_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_shadow"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">



                <ToggleButton
                    android:id="@+id/toggle_button_section"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_section_toggle"
                    android:contentDescription="Change state of section"
                    android:padding="@dimen/section_padding"
                    android:textOff=""
                    android:textOn="" />



                <TextView
                    android:id="@+id/text_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/section_padding"
                    android:paddingStart="5dp"
                    android:paddingTop="@dimen/section_padding"
                    android:singleLine="true"
                    android:textColor="@color/sky_blue"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_mood_edit"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:src="@drawable/edit_blue" />

                <ImageView
                    android:id="@+id/iv_mood_delete"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:gravity="center_horizontal"
                    android:src="@drawable/delete_blue" />

                <TextView
                    android:id="@+id/text_section_edit"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_blue_circle_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Edit"
                    android:textColor="@color/sky_blue"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_section_on_off"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rounded_blue_circle_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="OFF"
                    android:textColor="@color/sky_blue"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_above="@+id/ll_room_item"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:gravity="center_horizontal"
                    android:src="@drawable/bulb_off" />
            </LinearLayout>


            <LinearLayout
                android:padding="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icn_schedule_v2"
                    android:src="@drawable/icn_schedule_v2"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
                <ImageView
                    android:id="@+id/img_icn_log"
                    android:src="@drawable/icn_log_v2"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />

                <TextView
                    android:id="@+id/txt_total_devices"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/sky_blue"
                    android:text="0 Devices"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>