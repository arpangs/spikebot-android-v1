<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/linearAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:background="@color/automation_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.21"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/_3sdp"
                android:paddingBottom="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/txtImage"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/cam_defult"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_device_log_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.25"
                android:paddingBottom="@dimen/_4sdp"
                android:textColor="@color/automation_red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_device_log_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:paddingBottom="@dimen/_4sdp"
                android:gravity="center|left"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/automation_red"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_device_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:paddingBottom="@dimen/_4sdp"
                android:textColor="@color/automation_red"
                android:textSize="12sp" />

        </LinearLayout>




    </LinearLayout>

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/automation_dark_gray" />


</LinearLayout>