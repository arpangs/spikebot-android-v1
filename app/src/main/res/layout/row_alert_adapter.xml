<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/automation_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">


            <ImageView
                android:id="@+id/txtImage"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_50sdp"

                android:layout_marginTop="10.00dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12.00dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_device_log_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06 february 2020"
                    android:textColor="@color/automation_red"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_device_log_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55:22 PM"
                    android:textSize="9sp"
                    android:textColor="@color/automation_red"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>

                <RelativeLayout
                    android:id="@+id/relative_device_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/tv_device_log_date"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_device_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Person detected on camera at"
                        android:textColor="@color/automation_red"
                        android:layout_alignParentLeft="true"
                        android:textSize="12sp"
                        android:layout_marginRight="70dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_below="@+id/relative_device_desc"
                    android:background="@color/blue_transparent">

                    <TextView
                        android:id="@+id/tv_device_camera_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@color/blue_transparent"
                        android:text="cam hr"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/automation_red"
                        android:textSize="8sp" />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/automation_dark_gray" />

</LinearLayout>