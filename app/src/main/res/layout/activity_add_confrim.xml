<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/new_screen_resolution"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/sky_blue"
            app:popupTheme="@style/AppTheme.PopupOverlay">


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnAddToroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/icn_arrow_right"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"
            android:gravity="center|left"
            android:textColor="@color/sensor_button"
            android:background="@drawable/background_shadow"
            android:text="Add to New Room"/>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnExtingBridge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/icn_arrow_right"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"
            android:gravity="center|left"
            android:textColor="@color/sensor_button"
            android:background="@drawable/background_shadow"
            android:text="Add to Existing Room"/>




    </LinearLayout>

</LinearLayout>