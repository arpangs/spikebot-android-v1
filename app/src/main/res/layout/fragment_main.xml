<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/new_screen_resolution">


    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:gravity="right"
        android:visibility="invisible" />

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_above="@+id/view_bottom"
            android:id="@+id/main_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.spike.bot.fragments.DashBoardFragment">

            <RelativeLayout
                android:id="@+id/relativeMainfragment"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:focusableInTouchMode="true"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/messages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:nestedScrollingEnabled="false"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="none"
                    android:background="@color/automation_white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/messages"
                    android:orientation="vertical">


                </LinearLayout>

            </RelativeLayout>


        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/linear_retry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_screen_resolution"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Home controller is down."
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:id="@+id/button_retry"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/automation_white"
            android:text="Retry"
            android:textAllCaps="false"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/txt_empty_schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_empty_text"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_below="@+id/ll_recycler"
            android:gravity="center"
            android:textSize="@dimen/_24sdp"
            android:layout_marginTop="48dp"
            android:textColor="#808080"
            android:text="Add Room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/empty_add_image"
            android:src="@drawable/icn_empty_plus"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/automation_white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/deepsImage"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/loader2"
            android:visibility="visible" />


        <TextView
            android:id="@+id/txt_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deepsImage"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/search_home_controller"
            android:visibility="visible" />

    </LinearLayout>


    <!--Fab Menu End-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/fab_margin"
        android:gravity="right"
        android:clipToPadding="false"
        android:padding="12dp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_gravity="bottom|end">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            app:layout_behavior="com.spike.bot.core.MoveUpwardBehavior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@color/sky_blue"
            app:backgroundTint="@color/sky_blue"
            android:tint="@color/automation_white"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/icn_add"
            app:fabSize="normal"/>
    </LinearLayout>


</RelativeLayout>