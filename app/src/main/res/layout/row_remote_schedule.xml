<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:elevation="0dp">
    <!--app:cardElevation="0dp"
    app:elevation="0dp"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/automation_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ir_onoff_view"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/blue_border_rectangle"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="58dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ir_on_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ir_tv_schedule_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="Start :"
                        android:textColor="@color/sky_blue"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/ir_tv_schedule_on_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="- "
                        android:textColor="@color/sky_blue"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ir_off_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ir_tv_schedule_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="End :"
                        android:textColor="@color/sky_blue"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/ir_tv_schedule_off_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="- "
                        android:textColor="@color/sky_blue"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <TextView
                        android:id="@+id/ir_tv_name"
                        android:visibility="visible"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Good Morning."
                        android:textColor="@color/sky_blue"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/ir_tv_schedule_days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:singleLine="true"
                        android:text="Sun Mon Tue Wed Thu Fri Sat"
                        android:textSize="16sp" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/ir_iv_schedule_dots"
                    android:layout_marginTop="6dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icn_dots" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_line_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/automation_dark_gray" />

    </LinearLayout>

</androidx.cardview.widget.CardView>