<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/edt_txt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:background="@color/automation_white"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:elevation="5dp">

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/up_device_icon"
                android:layout_weight="0.2"
                android:src="@drawable/off_door"
                android:layout_width="0dp"
                android:layout_height="52dp" />

            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/up_device_name"
                    android:textColor="@color/txtPanal"
                    android:text="Door"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/_16sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/up_device_module"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <ImageView
                android:id="@+id/up_save"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:src="@drawable/icn_empty_plus"
                android:layout_width="0dp"
                android:layout_height="32dp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>