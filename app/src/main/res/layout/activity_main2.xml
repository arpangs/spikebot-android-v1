<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context="com.spike.bot.activity.Main2Activity">

    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/solid_blue"
            android:fitsSystemWindows="true"
            android:outlineAmbientShadowColor="#ebebeb"
            app:elevation="10dp">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:elevation="@dimen/_15sdp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <!--app:layout_scrollFlags="scroll|enterAlways"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- <ImageView
                        android:layout_weight="0.2"
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">


                        <TextView
                            style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="Avenir-Heavy"
                            android:text="Connected to "
                            android:textColor="@color/automation_white"
                            android:textSize="@dimen/_13sdp">

                        </TextView>

                        <ImageView
                            android:id="@+id/toolbar_cloud"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:src="@drawable/cloud" />

                        <TextView
                            android:id="@+id/toolbarwifiname"
                            style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:background="?android:attr/selectableItemBackground"
                            android:fontFamily="Avenir-Heavy"
                            android:gravity="center"
                            android:text="Wifi"
                            android:textColor="@color/automation_white"
                            android:textSize="@dimen/_13sdp" />


                        <TextView
                            style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@color/automation_white" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/toolbar_notification"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center|end"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/bell" />

                            <TextView
                                android:id="@+id/img_setting_badge_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:background="@drawable/badge_background"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="#FFF"
                                android:textSize="11dp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </FrameLayout>

                        <ImageView
                            android:id="@+id/toolbar_setting"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center|end"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/settings_white" />

                    </LinearLayout>
                    <!--<LinearLayout
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/toolbar_cloud"
                            android:layout_width="24dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/cloud" />

                        <TextView
                            android:id="@+id/toolbarTitle"
                            style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:text="      "
                            android:textColor="@color/sky_blue" />

                        <ImageView
                            android:id="@+id/toolbarImage"
                            android:layout_width="24dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/down_arrow" />

                    </LinearLayout>-->


                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <!--<com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_appbar_corner_gray">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_appbar_corner_gray">

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>-->


        <cn.wj.android.colorcardview.CardView
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:cardCornerRadius="13dp"
            app:cardElevation="5dp"
            app:contentPaddingRight="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/background_appbar_corner_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_account_circle_black_24dp"></ImageView>

                    <TextView
                        android:id="@+id/toolbarTitle"
                        style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:text="  myfrust  "
                        android:textColor="#393939"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/toolbarImage"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:text="CHANGE"
                        android:textColor="@color/solid_blue"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </cn.wj.android.colorcardview.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/linear_progress_cloud"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/automation_white"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/deepsImageCloud"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/loader2"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/txt_connection_cloud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deepsImage"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Connecting to cloud"
                        android:textSize="16sp"
                        android:visibility="visible" />

                </LinearLayout>

            </FrameLayout>

            <!--  <com.spike.bot.customview.CustomViewPager
                  android:id="@+id/container"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_above="@+id/tabs"
                  android:visibility="visible"
                  app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->

            <!--   <android.support.design.widget.TabLayout
                   android:id="@+id/tabs"
                   style="@style/customTabLayout"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_62sdp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/automation_white"
                   app:tabGravity="fill"
                   app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
                   app:tabTextColor="@color/automation_white" />
   -->


            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linearTab"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <View
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_bottombar_corner"
                android:visibility="gone">

            </View>

            <LinearLayout
                android:id="@+id/linearTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_82sdp"
                    android:background="@drawable/background_bottombar_corner"
                    android:visibility="gone"
                    app:itemIconSize="@dimen/_21sdp"
                    app:itemIconTint="@drawable/bottom_nav_icon_color_selector"
                    app:itemTextColor="@color/automation_white"
                    app:labelVisibilityMode="selected"
                    app:menu="@menu/menu_tab" />

                <com.akhilpatoliya.chip_navigation_bar.ChipNavigationBar
                    android:id="@+id/navigation_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/background_bottombar_corner"
                    android:padding="8dp"
                    app:cnb_menuResource="@menu/menu_tab"
                    app:cnb_unselectedColor="@color/automation_white" />
            </LinearLayout>


            <!-- progress view ,login view, searching view-->
            <LinearLayout
                android:id="@+id/linear_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/automation_white"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/deepsImage"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/loader2"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/txt_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deepsImage"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="@string/search_home_controller"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
