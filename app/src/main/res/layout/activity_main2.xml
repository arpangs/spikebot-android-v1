<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context="com.spike.bot.activity.Main2Activity">

    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="@color/automation_white">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/automation_white"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <!--app:layout_scrollFlags="scroll|enterAlways"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_app_launcher"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                    <LinearLayout
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/toolbar_cloud"
                            android:layout_width="24dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/cloud" />

                        <TextView
                            android:id="@+id/toolbarTitle"
                            style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textColor="@color/sky_blue"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:text="Spike Bot" />

                        <ImageView
                            android:id="@+id/toolbarImage"
                            android:layout_width="24dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/down_arrow" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/toolbar_setting"
                        android:layout_weight="0.1"
                        android:layout_gravity="center"
                        android:src="@drawable/settings"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                </LinearLayout>


            </android.support.v7.widget.Toolbar>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/linear_progress_cloud"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/automation_white"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/deepsImageCloud"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/loader2"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/txt_connection_cloud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deepsImage"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Connecting to cloud"
                        android:textSize="16sp"
                        android:visibility="visible" />

                </LinearLayout>

            </FrameLayout>

            <com.spike.bot.customview.CustomViewPager
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tabs"
                android:visibility="visible"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                style="@style/customTabLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_62sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/automation_white"
                app:tabGravity="fill"
                app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
                app:tabTextColor="@color/automation_white" />

            <LinearLayout
                android:id="@+id/linear_retry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/automation_white"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Oh no!"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_error_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="No Internet found.\nCheck your connection or try again."
                    android:textAppearance="@android:style/TextAppearance.Medium" />

                <Button
                    android:id="@+id/button_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_border"
                    android:text="RETRY"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- progress view ,login view, searching view-->
            <LinearLayout
                android:id="@+id/linear_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/automation_white"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/deepsImage"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/loader2"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/txt_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deepsImage"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="@string/search_home_controller"
                    android:textSize="16sp"
                    android:visibility="visible" />

            </LinearLayout>

          <!--  <FrameLayout
                android:layout_marginBottom="380dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:layout_gravity="end"
                    android:tint="@color/automation_white"
                    android:background="@color/sky_blue"
                    app:backgroundTint="@color/sky_blue"
                    android:layout_margin="@dimen/fab_margin"
                    android:src="@drawable/icn_add" />

            </FrameLayout>-->






        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/automation_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="180dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone">

        <ImageView
            android:src="@drawable/ic_app_launcher"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_app_title"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_username"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter User Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="16dp"
            android:hint="Enter Password"
            android:inputType="textPassword" />


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/automation_white"
                android:background="@drawable/button_radius"
                android:layout_height="wrap_content"
                android:text="CANCEL" />

            <Button
                android:id="@+id/btn_login"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/automation_white"
                android:background="@drawable/button_radius"
                android:layout_height="wrap_content"
                android:text="LOGIN" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login_search"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_radius"
            android:textColor="@color/automation_white"
            android:text="SEARCH HOME CONTROLLER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
