                <!--Today on time layouts-->

                <LinearLayout
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_on_time_bottom"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.30"
                            android:ems="10"
                            android:visibility="gone"
                            android:paddingLeft="5dp"
                            android:text="Off time" />

                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.70"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/et_on_time_bottom_header"
                                android:layout_width="wrap_content"
                                android:visibility="visible"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:inputType="textPersonName"/>

                            <TextView
                                android:id="@+id/et_on_time_bottom_header_at"
                                android:layout_marginLeft="4dp"
                                android:textSize="12sp"
                                android:layout_marginRight="1dp"
                                android:layout_width="wrap_content"
                                android:visibility="visible"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:inputType="textPersonName"
                                android:text="at" />

                            <TextView
                                android:id="@+id/et_on_time_bottom_header_at_time"
                                android:layout_width="wrap_content"
                                android:visibility="visible"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:inputType="textPersonName"
                                android:text="08:30 AM" />

                            <TextView
                                android:id="@+id/et_on_time_bottom_header_at_ampm"
                                android:layout_width="wrap_content"
                                android:visibility="visible"
                                android:textSize="12sp"
                                android:layout_marginRight="4dp"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:inputType="textPersonName"
                                android:text="" />

                        </LinearLayout>


                    </LinearLayout>

                    <!--auto select off botton header-->
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:id="@+id/ll_off_time_bottom"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.30"
                            android:textSize="14sp"
                            android:ems="10"
                            android:visibility="gone"
                            android:paddingLeft="5dp"
                            android:text="Off time" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.70"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/et_off_time_bottom_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:textSize="12sp"
                                android:inputType="textPersonName"
                                android:text="Feb 28, 2018" />

                            <TextView
                                android:id="@+id/et_off_time_bottom_header_at"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="1dp"
                                android:textSize="12sp"
                                android:focusable="false"
                                android:inputType="textPersonName"
                                android:text="at" />

                            <TextView
                                android:id="@+id/et_off_time_bottom_header_at_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textSize="12sp"
                                android:focusable="false"
                                android:inputType="textPersonName"
                                android:text="08:30" />

                            <TextView
                                android:id="@+id/et_off_time_bottom_header_at_ampm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
