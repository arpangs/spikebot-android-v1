<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/automation_gray_2"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.spike.bot.activity.ScheduleActivity"
    tools:showIn="@layout/activity_schedule">

    <RelativeLayout
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/automation_dark_gray"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_auto_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/camera_list"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_white_gray_border"
                android:padding="1dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/automation_dark_gray"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:paddingRight="5dp"
                    android:text="Schedule" />

                <ImageView
                    android:id="@+id/iv_schedule_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/add_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_gray_border"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnRoomSchedule"
                        android:background="@drawable/drawable_gray_schedule"
                        android:text="Room"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textAllCaps="false"
                        android:textColor="@color/txtPanal"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnMoodSchedule"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:background="@drawable/drawable_blue_schedule"
                        android:textColor="@color/automation_white"
                        android:text="Mood"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.30"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:textColor="@color/automation_black"
                        android:text="Schedule For" />

                    <RadioGroup
                        android:id="@+id/rg_schedule_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.70"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_schedule_type_room"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Room" />

                        <RadioButton
                            android:id="@+id/rb_schedule_type_mood"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Mood" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.30"
                        android:ems="10"
                        android:textColor="@color/automation_black"
                        android:paddingLeft="5dp"
                        android:text="Type" />


                    <RadioGroup
                        android:id="@+id/rg_schedule_select"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.70"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_schedule_select_schedule"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Schedule" />

                        <RadioButton
                            android:id="@+id/rb_schedule_select_timer"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Timer" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_spinner_hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_schedule_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.30"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:text="Room List" />

                    <Spinner
                        android:id="@+id/sp_schedule_list"
                        android:layout_width="0dp"
                        style="@android:style/Widget.Material.Spinner.Underlined"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.70" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_schedule_name"
                        android:layout_width="match_parent"
                        android:imeOptions="actionDone"
                        android:hint="Add Name"
                        android:padding="@dimen/_8sdp"
                        android:background="@drawable/edt_border"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLength="26"
                        android:text="" />

                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--On Time Start-->
                    <LinearLayout
                        android:id="@+id/ll_on_time"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.spike.bot.customview.CustomEditText
                            android:id="@+id/et_schedule_on_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/icn_close"
                            android:drawablePadding="8dp"
                            android:hint="On Time"
                            android:padding="@dimen/_8sdp"
                            android:layout_weight="0.70"
                            android:background="@drawable/edt_border"
                            android:focusable="false"
                            android:inputType="textPersonName"
                            android:text="" />

                        <ImageView
                            android:id="@+id/iv_schedule_on_time_clear"
                            android:visibility="gone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:maxHeight="35dp"
                            android:padding="1dp"
                            android:src="@drawable/close_clear_gray" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow_right" />


                    <!--On Time End-->

                    <!--Off Time Start-->
                    <LinearLayout
                        android:id="@+id/ll_off_time"
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.spike.bot.customview.CustomEditText
                            android:id="@+id/et_schedule_off_time"
                            android:layout_width="0dp"
                            android:background="@drawable/edt_border"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.70"
                            android:hint="Off Time"
                            android:padding="@dimen/_8sdp"
                            android:focusable="false"
                            android:drawableRight="@drawable/icn_close"
                            android:drawablePadding="8dp"
                            android:inputType="textPersonName"
                            android:text="" />

                        <ImageView
                            android:id="@+id/iv_schedule_off_time_clear"
                            android:visibility="gone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:maxHeight="35dp"
                            android:padding="1dp"
                            android:src="@drawable/close_clear_gray" />
                    </LinearLayout>
                    <!--Off Time End-->
                    </LinearLayout>
                    <!--for auto select-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_on_time_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--On Time-->
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:layout_gravity="left"
                            android:ems="10"
                            android:paddingLeft="5dp"
                            android:text="On Time" />

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/edt_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.spike.bot.customview.CustomEditText
                                android:id="@+id/et_on_time_hours"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:hint="HH"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:inputType="number"
                                android:background="#00000000"
                                android:imeOptions="actionNext"
                                android:maxLength="2"
                                android:singleLine="true" />

                            <TextView
                                android:layout_weight="0.2"
                                android:text=":"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <com.spike.bot.customview.CustomEditText
                                android:id="@+id/et_on_time_min"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:background="#00000000"
                                android:imeOptions="actionNext"
                                android:maxLength="2"
                                android:hint="MM"
                                android:singleLine="true"
                                android:inputType="number"
                                />


                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgArraoTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:src="@drawable/arrow_right" />


                    <!--Off Time-->

                    <LinearLayout
                        android:id="@+id/ll_off_time_auto"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:layout_gravity="left"
                            android:ems="10"
                            android:paddingLeft="5dp"
                            android:text="Off Time" />

                        <LinearLayout
                            android:background="@drawable/edt_border"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.spike.bot.customview.CustomEditText
                                android:id="@+id/et_off_time_hours"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:hint="HH"
                                android:padding="@dimen/_8sdp"
                                android:inputType="number"
                                android:background="#00000000"
                                android:imeOptions="actionNext"
                                android:maxLength="2"
                                android:singleLine="true" />

                            <TextView
                                android:layout_weight="0.2"
                                android:text=":"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <com.spike.bot.customview.CustomEditText
                                android:id="@+id/et_off_time_min"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:background="#00000000"
                                android:imeOptions="actionNext"
                                android:maxLength="2"
                                android:hint="MM"
                                android:singleLine="true"
                                android:inputType="number"
                                />


                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <!--off Time-->



                    </LinearLayout>



                </LinearLayout>

                <!--auto select off_time-->
              <!--  <LinearLayout
                    android:id="@+id/ll_off_time_auto"
                    android:visibility="gone"
                    android:layout_width="match_parent"
