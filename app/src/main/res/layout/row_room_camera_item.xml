<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="2dp"
    android:background="@color/automation_white"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_room_item"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:gravity="center_horizontal"
            android:src="@drawable/bulb_off" />

        <ImageView
            android:id="@+id/iv_icon_active_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_room_item"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:gravity="center_horizontal"
            android:padding="0dp"
            android:src="@drawable/icn_camera_disable"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_room_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:padding="@dimen/_7sdp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:lines="1"
                android:text="Device 1" />

            <ImageView
                android:id="@+id/iv_icon_text"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:src="@drawable/down_arrow_gray" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearViewRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>