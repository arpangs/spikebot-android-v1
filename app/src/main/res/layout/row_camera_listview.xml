<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_room_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:padding="@dimen/_4sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_gravity="center" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_icon_select"
                        android:visibility="gone"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:src="@drawable/switch_select_"/>

                </LinearLayout>
            </FrameLayout>


            <TextView
                android:id="@+id/text_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/sensor_button"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_13sdp"/>


            <ImageView
                android:id="@+id/iv_icon_text"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:gravity="center_horizontal"
                android:src="@drawable/edit_blue" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/imgLogCamera"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:gravity="center_horizontal"
                    android:src="@drawable/icn_notification_v2" />

                <TextView
                    android:id="@+id/txtCameraCount"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="0"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/_27sdp"
                    android:background="@drawable/badge_background"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:maxLength="2"
                    android:textColor="@color/automation_white"
                    android:layout_gravity="right|top"/>

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/automation_black"/>
</LinearLayout>