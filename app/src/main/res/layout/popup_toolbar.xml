<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_25sdp"
    android:layout_marginRight="@dimen/_25sdp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@android:color/transparent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_line_popup"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgraound_gray_top"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_add_account"
                android:text="Add Account"
                android:textSize="16sp"
                android:gravity="center|left"
                android:drawablePadding="7dp"
                android:padding="@dimen/_9sdp"
                android:layout_gravity="center|left"
                android:textColor="@color/automation_black"
                android:drawableLeft="@drawable/add_blue"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/userList"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgraound_gray_bottom"
            android:padding="@dimen/_4sdp"/>

    </LinearLayout>


</LinearLayout>