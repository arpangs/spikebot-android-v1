<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:elevation="0dp">
    <!--app:cardElevation="0dp"
    app:elevation="0dp"-->

    <LinearLayout
        android:id="@+id/linearRoomSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shadow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_schedule_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/sky_blue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_schedule_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:visibility="visible"
                    android:singleLine="true"
                    android:textColor="@color/automation_dark"
                    android:text="Sun Mon Tue Wed Thu Fri Sat"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_43sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_sche_type"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_scheduler_new"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <!--Sch start-->

            <LinearLayout
                android:id="@+id/ll_schedule_on_off"
                android:visibility="visible"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/blue_border_rectangle"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="38dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_on"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_schedule_on"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="On : "
                        android:textColor="@color/sky_blue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_schedule_on_auto"
                        android:text="Mar 2, 2018 (On)"
                        android:visibility="gone"
                        android:gravity="left|center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_schedule_on_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:text="- 00:00 AM"
                        android:textColor="@color/sky_blue"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_off"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:padding="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_schedule_off"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="off : "
                        android:textColor="@color/sky_blue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_schedule_off_auto"
                        android:text="Mar 2, 2018 (Off)"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textColor="@color/automation_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_schedule_off_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="- 00:00 AM"
                        android:textColor="@color/sky_blue"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

            <!--Sch End-->



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Good Morning."
                        android:textColor="@color/automation_yellow"
                        android:textSize="14sp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_schedule_edit"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/iv_schedule_delete"
                    android:layout_marginTop="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:layout_gravity="top"
                    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_schedule_dots"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/more" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/view_line_top"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/txtPanal" />

    </LinearLayout>

</LinearLayout>