<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_shadow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_Brand"
            android:src="@drawable/lock_only"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtBrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="lock name"
            android:layout_gravity="center"
            android:textColor="@color/automation_black"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/img_more_option"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/edit_blue">

        </ImageView>
    </LinearLayout>
</RelativeLayout>