<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/penal_cardview"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:elevation="10dp">

    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/view_line_top"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/automation_gray_2"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/automation_white"
        android:paddingBottom="3dp"
        android:paddingEnd="10dp"

        android:paddingStart="10dp">

        <LinearLayout
            android:id="@+id/toggle_button_section_penel_layout"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/toggle_button_section_penel"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:background="@drawable/selector_section_toggle"
            android:contentDescription="Change state of section"
            android:padding="@dimen/section_padding"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/sky_blue"
            android:padding="13dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="Sample Text"
            android:textSize="16sp"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_room_panel_onoff"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"

            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:src="@drawable/panel_off"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_recording"
            android:visibility="gone"
            android:text="â—‰ RECORDINGS"
            android:padding="5dp"
            android:textStyle="bold"
            android:background="@drawable/txt_background"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
