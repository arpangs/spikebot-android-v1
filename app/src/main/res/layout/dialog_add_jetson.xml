<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_23sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/automation_blue"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="@string/add_jetson"
                android:gravity="center"
                android:padding="@dimen/_10sdp"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgClose"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_gravity="center"
                android:src="@drawable/close_blue2"/>

        </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/automation_black"/>


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:maxLength="16"
            android:background="@drawable/edt_border"
            android:textColor="@color/automation_black"
            android:singleLine="true"
            android:hint="Enter name"
            android:gravity="center|left"
            android:padding="@dimen/_10sdp"/>


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editIpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:maxLength="16"
            android:background="@drawable/edt_border"
            android:textColor="@color/automation_black"
            android:singleLine="true"
            android:hint="Enter ip address"
            android:gravity="center|left"
            android:padding="@dimen/_10sdp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/automation_white"
                android:background="@drawable/drawable_blue_schedule"/>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/add"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/automation_white"
                android:background="@drawable/drawable_blue_schedule"/>


        </LinearLayout>





    </LinearLayout>

</LinearLayout>